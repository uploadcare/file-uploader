{
  "name": "@uploadcare/uc-blocks",
  "version": "0.0.6",
  "description": "Building blocks for Uploadcare products integration",
  "type": "module",
  "module": "index.js",
  "sideEffects": false,
  "repository": "https://github.com/uploadcare/uc-blocks/",
  "files": [
    "abstract/**/*.{js,css}",
    "blocks/**/*.{js,css}",
    "solutions/**/*.{js,css}",
    "submodules/**/*.{js,css}",
    "web/**/*.{js,css}",
    "index.js",
    "env.js",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "sym": "git submodule add -b main https://github.com/symbiotejs/symbiote.js submodules/symbiote",
    "update_submodules": "git submodule update --init --recursive --remote",
    "setup": "npm run update_submodules && npm i",
    "test": "test",
    "release": "shipjs prepare",
    "dev": "wds --open",
    "build": "npm run clean && node ./build.js",
    "tsc": "tsc --skipLibCheck --allowJs --noEmit",
    "lint:js": "eslint ./",
    "lint:js:fix": "eslint ./ --fix",
    "lint:css": "stylelint './**/*.css'",
    "lint:css:fix": "stylelint './**/*.css' --fix",
    "lint": "run-s lint:js lint:css",
    "clean": "rimraf ./web/**/*.{js,css}",
    "format:js": "prettier --write ./**/*.{js,cjs};",
    "format:css": "prettier --write --parser css ./**/*.css",
    "format:html": "prettier --write --parser html ./**/*.html",
    "format:json": "prettier --write --parser json ./**/*.json",
    "format:md": "prettier --write --parser markdown ./**/*.md",
    "format": "run-s lint:js:fix lint:css:fix format:js format:css format:html format:json format:md"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.7",
    "@babel/preset-env": "^7.15.6",
    "@types/node": "^17.0.23",
    "@web/dev-server": "^0.1.30",
    "esbuild": "^0.14.21",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-jsdoc": "0.3.36",
    "rimraf": "^3.0.2",
    "shipjs": "^0.24.3",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,cjs}": ["tsc --skipLibCheck --allowJs --noEmit", "eslint --fix", "prettier --write", "git add"],
    "*.css": ["stylelint --fix", "prettier --write --parser css", "git add"],
    "*.html": ["prettier --write --parser html", "git add"],
    "*.json": ["prettier --write --parser json", "git add"],
    "*.md": ["prettier --write --parser markdown", "git add"]
  },
  "author": "Uploadcare Inc.",
  "license": "MIT"
}
