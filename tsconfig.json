{
  "compilerOptions": {
    "pretty": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2017", "ESNext", "ESNext.Array", "DOM", "DOM.Iterable", "WebWorker"],
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "chai",
      "mocha",
      "@total-typescript/ts-reset",
      "@vitest/browser/providers/playwright",
      "vite/client"
    ],
    "noEmit": true,
    "jsxFactory": "renderer.create",
    "jsxFragmentFactory": "renderer.fragment",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.js", "types", "tests", "test-renderer.tsx"],
  "exclude": ["node_modules"]
}
